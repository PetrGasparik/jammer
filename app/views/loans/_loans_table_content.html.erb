
<% @loans.each do |loan| %>
    <tr>
      <% if @loan_columns.include? 'id' %>
      <td><%= loan.id %></td>
      <% end %>
      <% if @loan_columns.include? 'name' %>
      <td><%= loan.name %></td>
      <% end %>
      <% if @loan_columns.include? 'user_name' %>
      <td><%= loan.user ? link_to loan.user_name, user_path(loan.user) : '<i>Not yet scraped</i>'.html_safe %></td>
      <% end %>
      <% if @loan_columns.include? 'loan_link' %>
      <td><%= link_to loan.btcjam_url, "#{loan.btcjam_url}_from_btcjammer" %></td>
      <% end %>
      <% if @loan_columns.include? 'user_link' %>
      <td><%= loan.user ? link_to(loan.user.profile_url, loan.user.profile_url) : '<i>Not yet scraped</i>'.html_safe %></td>
      <% end %>
      <% if @loan_columns.include? 'state' %>
      <td><%= loan.state.capitalize %></td>
      <% end %>
      <% if @loan_columns.include? 'amount' %>
      <td>฿<%= format_btc loan.advertised_amount %></td>
      <% end %>
      <% if @loan_columns.include? 'btc_per_payment' %>
      <td>฿<%= format_btc loan.btc_per_payment %></td>
      <% end %>
      <% if @loan_columns.include? 'term' %>
      <td><%= loan.term %></td>
      <% end %>
      <% if @loan_columns.include? 'payment_count' %>
      <td><%= loan.payment_count %></td>
      <% end %>
      <% if @loan_columns.include? 'total_to_repay' %>
      <td>฿<%= format_btc loan.total_to_repay %></td>
      <% end %>
      <% if @loan_columns.include? 'return' %>
      <td><%= loan.percentage_return.round(3) %>%</td>
      <% end %>
      <% if @loan_columns.include? 'apr' %>
      <td><%= loan.apr.round(2) %>%</td>
      <% end %>
      <% if @loan_columns.include? 'date' %>
      <td><span title='<%= loan.invested_at.to_s %>'><%= loan.invested_at.to_date.to_s %></span></td>
      <% end %>
    </tr>
<% end %>