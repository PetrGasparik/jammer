<h1>Users</h1>

<form class="pure-form" method="get" id="user_search">
  <fieldset>
    <legend>Filter by username</legend>

    <input type="text" placeholder="type here" name="alias">
    <input type="submit" value="search" class="pure-button pure-button-primary">
  </fieldset>
</form>

<table class="pure-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Profile Link</th>
      <th>Loans</th>
      <th>Repaid Loans</th>
      <th>Payments Made</th>
      <th>Active Loans</th>
      <th>Funding Loans</th>
      <th>Overdue Payments</th>
      <th>Approx. Debt</th>
      <th>Potential Debt</th>
      <th>Investments Made</th>
    </tr>
  </thead>
  <tbody id="user_content">
    <%= render 'users_table_content', users: @users %>
  </tbody>
</table>

<div id="pagina">
  <%= will_paginate @users %>
</div>
